<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvCandidateNameP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POST"
                android:layout_margin="10dp"
                android:textColor="@color/DarkPrimaryColor"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tvTopic_Post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topic"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The canteen serving food in civivc ward of districts and baren places of lahore. The canteen serve breakfast, lunch and dinner. Aimed at serving economically disadvantage sectionsof society at a subsidized price."
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="25dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15sp"
                android:layout_marginVertical="20dp"
                >

                <LinearLayout
                    android:id="@+id/llLike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/ivLike"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/thumbs_up"
                        />

                    <TextView
                        android:id="@+id/tvLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 upvotes"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDislike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/ivDislike"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/thumbs_down"
                        />

                    <TextView
                        android:id="@+id/tvDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 downvotes"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

            </LinearLayout>
            
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>